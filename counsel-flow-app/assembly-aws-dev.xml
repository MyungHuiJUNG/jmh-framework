<assembly xmlns="https://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="https://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>aws-dev</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>./src/main/resources/static</directory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.build.directory}/${project.build.finalName}.jar</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>./bin/server-start.sh</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0777</fileMode>
        </file>
        <file>
            <source>./bin/server-stop.sh</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0777</fileMode>
        </file>
        <file>
            <source>./bin/server-restart.sh</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0777</fileMode>
        </file>
        <file>
            <source>./config/application.yml</source>
            <outputDirectory>/config</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>./config/application-${remote.deploy.server.id}.yml</source>
            <outputDirectory>/config</outputDirectory>
        </file>
        <file>
            <source>./config/environment-${remote.deploy.server.id}.properties</source>
            <outputDirectory>/config</outputDirectory>
            <destName>environment.properties</destName>
        </file>
        <file>
            <source>./config/logback-${remote.deploy.server.id}.xml</source>
            <outputDirectory>/config</outputDirectory>
        </file>
    </files>
</assembly>